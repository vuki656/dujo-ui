{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "ES2019",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2019",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}
